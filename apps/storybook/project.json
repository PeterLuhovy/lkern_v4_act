{
  "name": "storybook",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/storybook",
  "projectType": "application",
  "tags": ["type:storybook", "scope:shared"],
  "targets": {
    "storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx storybook dev -p 6006 --no-open",
        "cwd": "apps/storybook"
      }
    },
    "build-storybook": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/storybook-static"],
      "options": {
        "command": "npx storybook build -o storybook-static",
        "cwd": "apps/storybook"
      }
    }
  }
}
