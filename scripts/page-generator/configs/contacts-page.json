        { "value": "customer" },
        { "value": "employee" },
        { "value": "partner" }
      ]
    }
  ],
  "quickFilters": [
    {
      "id": "persons",
      "filterFn": "item.contact_type === 'person'"
    },
    {
      "id": "companies",
      "filterFn": "item.contact_type === 'company'"
    },
    {
      "id": "suppliers",
      "filterFn": "item.roles?.includes('supplier')"
    },
    {
      "id": "customers",
      "filterFn": "item.roles?.includes('customer')"
    }
  ],
